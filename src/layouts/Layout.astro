---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import InstallPWA from "../components/InstallPWA.astro";
import FeedbackButton from "../components/vue/FeedbackButton.vue";

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = "home" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- PWA tags -->
    <meta name="theme-color" content="#4f46e5" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Decival" />

    <!-- PWA manifest -->
    <link rel="manifest" href="/manifest.webmanifest" />

    <!-- Blocking script to prevent FOUC and handle theme persistence -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("darkMode")
        ) {
          return JSON.parse(localStorage.getItem("darkMode"))
            ? "dark"
            : "light";
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>

    <!-- Variables CSS globales -->
    <style is:global>
      :root {
        --accent: 79, 70, 229; /* Indigo-600 */
        --accent-hover: 67, 56, 202; /* Indigo-700 */
        --accent-active: 55, 48, 163; /* Indigo-800 */
      }

      :root.dark {
        --accent: 99, 102, 241; /* Indigo-500 en dark mode */
        --accent-hover: 79, 70, 229; /* Indigo-600 en dark mode */
        --accent-active: 67, 56, 202; /* Indigo-700 en dark mode */
      }
    </style>
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen pb-20"
  >
    <Header currentPage={currentPage} />

    <main class="mt-16">
      <slot />
    </main>

    <Footer currentPage={currentPage} />
    <InstallPWA />
    <FeedbackButton client:load />

    <script>
      import { isDarkMode } from "../stores/themeStore";
      import { initAnalytics } from "../firebase";

      // Initialisation du mode sombre
      isDarkMode.listen((isDark) => {
        document.documentElement.classList.toggle("dark", isDark);
      });

      // Initialisation de Firebase Analytics
      initAnalytics().catch(console.error);

      // Chargement des sons
      /*
       * Les sons sont synthétisés via Web Audio API (voir src/utils/soundEffects.ts)
       * donc pas de préchargement de fichiers nécessaire.
       */
    </script>
  </body>
</html>
