---
import Icon from "../../components/common/Icon.astro";
import Layout from "../../layouts/Layout.astro";

const ruleCategories = [
  {
    id: "addition",
    title: "Règles d'addition",
    description: "Comment additionner correctement les nombres",
    examples: [
      { text: "24 + 13 = 37", explanation: "Addition simple" },
      { text: "45 + 8 = 53", explanation: "Addition avec un chiffre" },
    ],
  },
  {
    id: "subtraction",
    title: "Règles de soustraction",
    description: "Comment soustraire des nombres",
    examples: [
      { text: "52 - 31 = 21", explanation: "Soustraction simple" },
      { text: "40 - 7 = 33", explanation: "Soustraction avec un chiffre" },
    ],
  },
  {
    id: "multiplication",
    title: "Tables de multiplication",
    description: "Les tables de multiplication de 1 à 12",
    examples: [
      { text: "6 × 7 = 42", explanation: "Multiplication simple" },
      { text: "8 × 9 = 72", explanation: "Multiplication avancée" },
    ],
  },
  {
    id: "comparison",
    title: "Règles de comparaison",
    description: "Comment comparer deux nombres",
    examples: [
      { text: "45 > 32", explanation: "Plus grand que" },
      { text: "17 < 24", explanation: "Plus petit que" },
    ],
  },
  {
    id: "decimal",
    title: "Règles des nombres décimaux",
    description: "Comment travailler avec les nombres à virgule",
    examples: [
      { text: "3.5 + 2.7 = 6.2", explanation: "Addition de décimaux" },
      { text: "5.0 > 4.9", explanation: "Comparaison de décimaux" },
    ],
  },
];
---

<Layout title="Règles mathématiques - Decival" currentPage="rules">
  <div class="max-w-lg mx-auto py-6 px-4">
    <h1 class="text-2xl font-bold mb-6">Règles mathématiques</h1>

    <div class="space-y-6">
      {
        ruleCategories.map((category) => (
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center gap-3 mb-4">
              <Icon name="book" class="w-6 h-6 text-accent" />
              <h2 class="text-xl font-semibold">{category.title}</h2>
            </div>
            <p class="text-gray-600 mb-4">{category.description}</p>

            <div class="bg-gray-50 rounded-lg p-4">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Exemples :</h3>
              <ul class="space-y-2">
                {category.examples.map((example) => (
                  <li>
                    <span class="font-mono bg-white px-2 py-1 rounded text-sm">
                      {example.text}
                    </span>
                    <span class="text-sm text-gray-500 ml-2">
                      {example.explanation}
                    </span>
                  </li>
                ))}
              </ul>
            </div>

            <a
              href={`/rules/${category.id}`}
              class="mt-4 inline-flex items-center text-accent hover:text-accent/80"
            >
              En savoir plus
              <svg
                class="w-5 h-5 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
