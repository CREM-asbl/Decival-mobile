---
import Button from "../components/common/Button.astro";
import Icon from "../components/common/Icon.astro";
import MrComma from "../components/vue/MrComma.vue";
import Layout from "../layouts/Layout.astro";

const features = [
  {
    icon: "clipboard",
    title: "Exercices interactifs",
    description: "Additions, soustractions, multiplications et comparaisons",
  },
  {
    icon: "chart",
    title: "Suivi des progrès",
    description: "Visualisez votre progression au fil du temps",
  },
  {
    icon: "book",
    title: "Règles et guides",
    description: "Apprenez les règles mathématiques essentielles",
  },
];
---

<Layout title="Decival - Exercices de mathématiques" currentPage="home">
  <main class="max-w-lg mx-auto px-4 py-8">
    <section
      class="mb-8 rounded-2xl border border-indigo-100 bg-indigo-50/80 px-4 py-3 shadow-sm dark:border-indigo-900 dark:bg-indigo-900/40"
    >
      <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:gap-4">
        <span
          class="inline-flex w-fit items-center gap-2 rounded-full bg-white/80 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-700 shadow-sm ring-1 ring-indigo-100 dark:bg-indigo-800/70 dark:text-indigo-100 dark:ring-indigo-700/60"
        >
          <span
            class="h-2 w-2 rounded-full bg-green-500 animate-pulse"
            aria-hidden="true"></span>
          Beta
        </span>
        <div class="flex-1 space-y-1">
          <p class="text-sm font-semibold text-indigo-900 dark:text-indigo-50">
            Decival évolue encore.
          </p>
          <p class="text-sm text-indigo-900/80 dark:text-indigo-100/80">
            Certaines fonctionnalités peuvent changer. Vos retours nous aident à
            prioriser les améliorations.
          </p>
        </div>
      </div>
    </section>

    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Bienvenue sur Decival</h1>
      <p class="text-gray-600 mb-6">
        Apprenez et pratiquez les mathématiques de manière interactive
      </p>
      <div class="flex flex-col items-center justify-center">
        <div class="mb-4">
          <MrComma
            variant="pointing"
            animate={true}
            altText="Monsieur Virgule vous souhaite la bienvenue"
            client:load
          />
        </div>
        <a href="/tests" class="no-underline">
          <Button variant="primary" size="lg"> Commencer les exercices </Button>
        </a>
      </div>
    </div>

    <div class="grid gap-6 mt-12">
      {
        features.map((feature) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border border-transparent dark:border-gray-700">
            <div class="flex items-center mb-4">
              <Icon
                name={feature.icon as "clipboard" | "chart" | "book"}
                class="w-8 h-8 text-accent"
              />
              <h2 class="text-xl font-semibold ml-3 dark:text-white">
                {feature.title}
              </h2>
            </div>
            <p class="text-gray-600 dark:text-gray-400">
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
