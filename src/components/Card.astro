---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
const titleId = `card-title-${title.toLowerCase().replace(/\s+/g, "-")}`;
---

<li
  class="group flex p-0.5 bg-gradient-to-br from-[rgb(var(--accent))] via-[#da62c4] to-white bg-[length:400%] bg-[100%] rounded-lg transition-[background-position] duration-600 ease-[cubic-bezier(0.22,1,0.36,1)] hover:bg-[0%] shadow-lg link-card"
  role="article"
  aria-labelledby={titleId}
>
  <a
    href={href}
    class="w-full no-underline leading-relaxed p-4 sm:p-6 rounded-md text-gray-900 bg-white/80"
    aria-describedby={`${titleId}-desc`}
  >
    <h2
      id={titleId}
      class="m-0 text-base sm:text-xl md:text-2xl font-bold transition-colors duration-600 group-hover:text-[rgb(var(--accent))]"
    >
      {title}
      <span class="inline-block ml-1" aria-hidden="true">&rarr;</span>
    </h2>
    <p
      id={`${titleId}-desc`}
      class="mt-2 mb-0 text-sm sm:text-base md:text-lg text-gray-600"
    >
      {body}
    </p>
  </a>
</li>

<style>
  .link-card {
    --card-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white
    );
    background-image: var(--card-gradient);
  }

  @media (hover: hover) {
    .link-card:hover {
      background-position: 0%;
      transform: translateY(-2px);
      transition: transform 0.2s ease;
    }
  }

  @media (max-width: 640px) {
    .link-card a {
      padding: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .link-card {
      transition: none;
    }
  }
</style>
