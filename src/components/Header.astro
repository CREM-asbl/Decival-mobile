---
interface Props {
  title?: string;
}

const { title = "Decival" } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 bg-white shadow-md z-50">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <div class="flex items-center">
      <img src="/logo.svg" alt="Decival Logo" class="h-8 w-auto" />
      <h1 class="ml-2 text-xl font-bold text-gray-800">{title}</h1>
    </div>
    <nav class="md:hidden">
      <button id="menuButton" class="text-gray-600 hover:text-gray-800">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById("menuButton");
  // La logique du menu mobile sera ajout√©e plus tard
</script>
