---
import FeedbackButton from "./vue/FeedbackButton.vue";
import { APP_VERSION } from "../config/constants";

interface Props {
  title?: string;
  currentPage?: string;
}

const { title = "Decival", currentPage = "home" } = Astro.props;
---

<header
  class="fixed top-0 left-0 right-0 bg-white dark:bg-gray-800 shadow-md z-50"
>
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <div class="flex items-center">
      <img src="/logo.png" alt="Decival Logo" class="h-10 w-auto" />
      <h1 class="ml-2 text-xl font-bold text-gray-800 dark:text-white">
        {title}
      </h1>
    </div>
    <FeedbackButton client:load appVersion={APP_VERSION} variant="inline" />
    <nav class="flex items-center gap-4">
      <button
        id="darkModeToggle"
        class="p-2 text-gray-600 hover:text-gray-800 dark:text-gray-300 dark:hover:text-white transition-colors"
        aria-label="Basculer le mode sombre"
      >
        <svg
          class="w-6 h-6 sun-icon"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          style="display: none;"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
          ></path>
        </svg>
        <svg
          class="w-6 h-6 moon-icon"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
          ></path>
        </svg>
      </button>
      <button
        id="menuButton"
        class="text-gray-600 hover:text-gray-800 dark:text-gray-300 dark:hover:text-white md:hidden"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
  </div>
</header>

<script>
  import {
    initializeTheme,
    isDarkMode,
    toggleDarkMode,
  } from "../stores/themeStore";

  const darkModeToggle = document.getElementById("darkModeToggle");
  const sunIcon = darkModeToggle?.querySelector(".sun-icon") as HTMLElement;
  const moonIcon = darkModeToggle?.querySelector(".moon-icon") as HTMLElement;

  // Update icons based on current theme
  const updateIcons = (isDark: boolean) => {
    if (sunIcon && moonIcon) {
      sunIcon.style.display = isDark ? "block" : "none";
      moonIcon.style.display = isDark ? "none" : "block";
    }
  };

  // Initialize
  if (typeof window !== "undefined") {
    initializeTheme();
    isDarkMode.subscribe(updateIcons);
    darkModeToggle?.addEventListener("click", toggleDarkMode);
  }
</script>
